<div class="btn-toolbar" role="toolbar">
    <div class="btn-group js-pivots-manager" role="group">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Ajouter
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu js-pivots-manager">
            {{# pivotTypes }}
            <li>
                <a href="{{baseUrl}}admin/object/edit?obj_type={{val}}" data-type="{{val}}" data-title="{{label}}" class="js-add-pivot" target="_blank">
                    <span class="glyphicon {{glyphicon}}"></span>
                    <span class="glyphicon-class">{{label}}</span>
                </a>
            </li>
            {{/ pivotTypes }}
        </ul>
    </div>
    {{# showPivotPreview }}
    <div class="btn-group" role="group" aria-label="Toggle Pivot Previews">
        <button type="button" class="btn btn-default js-pivots-expand" aria-label="Expand Previews">
            <span class="glyphicon glyphicon-collapse-down"></span> Expand
        </button>
        <button type="button" class="btn btn-default js-pivots-collapse" aria-label="Close Previews">
            <span class="glyphicon glyphicon-collapse-up"></span> Close
        </button>
    </div>
    {{/ showPivotPreview }}
</div>
