<div class="btn-group" role="group">
    {{^ readOnly }}
    <button type="button" class="btn {{# active }}btn-primary{{/ active }}{{^ active }}btn-danger{{/ active }} dropdown-toggle" data-toggle="dropdown">
        <span class="btn-label">{{# _t }}Actions{{/ _t }}</span>
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li><a href="object/edit?obj_type={{ objType }}&obj_id={{ id }}">{{# _t}}Edit{{/ _t }}</a></li>
        <li><a href="object/delete?obj_type={{ objType }}&obj_id={{ id }}"  data-pivot-id="{{ pivotId }}" data-action="delete">{{# _t}}Delete{{/ _t }}</a></li>
        {{!--<li><a href="pivot/detach?pivot_id=[[ pivotId ]]" data-pivot-id="[[ pivotId ]]" data-action="unlink">[[# _t]]Unlink[[/ _t ]]</a></li>--}}
    </ul>
    {{/ readOnly }}
</div>
