{{!--
    Pivot Widget \ Collapsible Object
    =================================

    @used-by `charcoal/admin/widget/pivot/object`
--}}
<header role="tab" draggable="true" id="{{ widgetId }}_heading_{{ id }}" class="panel-heading{{^ showPivotHeading }} sr-only{{/ showPivotHeading }}">
    <h4 class="panel-title">
        <span class="panel-title-icon glyphicon {{ glyphicon }}"></span>
        <a role="button"
           href="#{{ widgetId }}_body_{{ id }}"
           {{# showPivotHeading }}class="collapsed"{{/ showPivotHeading }}
           data-toggle="collapse"
           data-parent="#{{ widgetId }}_accordion"
           aria-controls="{{ widgetId }}_body_{{ id }}"
           aria-expanded="{{^ showPivotHeading }}true{{/ showPivotHeading }}{{# showPivotHeading }}false{{/ showPivotHeading }}"
           >{{& heading }}</a>
    </h4>
</header>
<section id="{{ widgetId }}_body_{{ id }}" class="panel-collapse collapse{{^ showPivotHeading }} in{{/ showPivotHeading }}" role="tabpanel" aria-labelledby="{{ widgetId }}_heading_{{ id }}">
    <div class="panel-body">
        {{> $widget_template }}
    </div>
</section>
