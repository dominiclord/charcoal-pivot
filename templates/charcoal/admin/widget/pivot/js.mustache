{{!--
    Pivot Widget \ JS Component
    ================================

    @used-by `charcoal/admin/widget/pivot`
--}}

{{# addJsRequirement }}
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
{{/ addJsRequirement }}

{{# addJs }}
<script>
{{!
    @see Charcoal.Admin.Widget_Pivot
}}
Charcoal.Admin.manager().add_widget({
    id:   '{{ widgetId }}',
    type: 'charcoal/admin/widget/pivot',
    data: {
        obj_type: '{{ objType }}',
        obj_id:   '{{ objId }}', // Can be a string
        group:    '{{ group }}'
    },
    widget_options: {{& widgetOptions }}
});
</script>
{{/ addJs }}
