{{!
    The object must be PivotAware
    Use the `obj` available from the dashboard / ObjectContainerTrait

    The `obj` has the `pivots` method (@see PivotAwareTrait)
}}
<section class="c-attachments_container js-pivot-container {{^ readOnly }} js-pivot-sortable{{/ readOnly }}">
    <div role="tablist"
         id="{{ widgetId }}_accordion"
         class="panel-group js-grid-container"
         data-parent-type="{{ obj.objType }}"
         data-parent-name="{{ obj.name }}"
         aria-multiselectable="false">
    {{# pivots }}
        {{> charcoal/admin/widget/pivot/object }}
    {{/ pivots }}
    {{^ hasPivots }}
        {{> charcoal/admin/widget/pivot/empty }}
    {{/ hasPivots }}
    </div>
</section>
